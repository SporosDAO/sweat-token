{
  "license": "Apache-2.0",
  "name": "sporosdao-contracts",
  "version": "1.0.0",
  "description": "Smart Contracts for SporosDAO ",
  "main": "index.js",
  "scripts": {
    "clean": "hardhat clean",
    "build": "hardhat compile",
    "test": "hardhat test",
    "coverage": "hardhat coverage && yarn coverage:check",
    "coverage:check": "npx istanbul check-coverage ./coverage.json --statements 99 --branches 37 --functions 99 --lines 99",
    "lint": "yarn prettier:solidity",
    "solhint": "solhint -f table src/**/*.sol",
    "prettier:solidity": "./node_modules/.bin/prettier --write src/**/*.sol",
    "prepare": "cd ../ && husky install ./contracts/.husky"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn lint"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ivelin/sweat-token.git"
  },
  "author": "ivelin.eth",
  "bugs": {
    "url": "https://github.com/SporosDAO/sweat-token/issues"
  },
  "homepage": "https://github.com/SporosDAO/sweat-token#readme",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.5",
    "@nomiclabs/hardhat-etherscan": "^3.0.3",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/contracts": "^4.5.0",
    "@typechain/ethers-v5": "^10.0.0",
    "@typechain/hardhat": "^6.0.0",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.26",
    "chai": "^4.3.6",
    "dotenv": "^16.0.0",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.6.4",
    "hardhat": "^2.9.3",
    "hardhat-dependency-compiler": "^1.1.3",
    "hardhat-deploy": "^0.11.10",
    "hardhat-gas-reporter": "^1.0.8",
    "hardhat-watcher": "^2.2.0",
    "husky": "^8.0.1",
    "kalidao": "https://github.com/kalidao/kali-contracts.git",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.21",
    "ts-node": "^10.7.0",
    "tslog": "^3.3.3",
    "typechain": "^8.0.0",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "prettier": "^2.7.0",
    "prettier-plugin-solidity": "^1.0.0-beta.19"
  }
}
